<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto" >
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
        <% @book.errors.full_messages.each do |message| %>
         <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @book, local: true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
