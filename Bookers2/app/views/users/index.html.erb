<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/list", user: @user %>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-light btn-block" do %><i class="fas fa-user-cog"></i><% end %>
      <%= render "books/list", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table ">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :size => "40x40", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>