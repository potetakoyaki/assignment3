<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/361ca62b7e.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark ">
        <div class="container">
          <ul class="navbar-nav  ml-left ">
          <li class="nav-item">
            <%= link_to "Bookers", root_path,class:"editlink" %>
          </li>
          </ul>
          <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
           <%= link_to user_path(current_user.id), class:"editlink" do %><i class="fas fa-home"></i>Home<% end %>
          </li>

          <li class="nav-item">
           <%= link_to users_path,class:"editlink" do %><i class="fas fa-users" ></i>Users<% end %>
          </li>
          <li class="nav-item">
            <%= link_to books_path,class:"editlink" do %><i class="fas fa-book-open"></i>Books<% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete,class:"editlink" do %><i class="fas fa-sign-out-alt"></i>logout<% end%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to root_path,class:"editlink" do%><i class="fas fa-home"></i>Home<% end %>
          </li>
          <li class="nav-item">
            <%= link_to home_about_path,class:"editlink" do %><i class="fas fa-link"></i>About<% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path,class:"editlink" do%><i class="fas fa-user-plus"></i>sign up<% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path,class:"editlink" do %><i class="fas fa-sign-in-alt"></i>login<% end %>
          </li>
        <% end %>
        </ul>
        </div>
      </nav>
    </header>
    <%= render "layouts/flash" %>
    <%= yield %>
    <br></br
    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
